@model IEnumerable<WebApplPromo.Models.articulo>

@{
    ViewBag.Title = "Lista de productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de artìculos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Agregar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cant)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cant)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.codigo }) |
            @Html.ActionLink("Detalles", "DetallesArticulo", new { id = item.codigo }) |
            @Html.ActionLink("Borrar", "Borrar", new { id = item.codigo }, new { @class = "aElimina" }) 
        </td>
    </tr>
}

</table>

@section scripts{
<script>
    $(".aElimina").click(function (event) {
        if (!confirm('¿Estàs seguro de eliminar?')) {
            event.preventDefault();
        }
    });
    </script>
    }